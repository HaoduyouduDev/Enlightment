<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <FrameLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/dialog_get_question_choose_question_close_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关闭"
                    android:textSize="18dp"
                    android:textColor="#03A9F4"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center_vertical|start"/>

            <TextView
                android:id="@+id/dialog_get_question_choose_question_more_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加选区"
                android:textSize="18dp"
                android:textColor="#03A9F4"
                android:layout_gravity="center"/>

            <TextView
                    android:id="@+id/dialog_get_question_choose_question_ok_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认"
                    android:textSize="18dp"
                    android:textColor="#03A9F4"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center_vertical|end"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.michaelzhan.enlightenment.ui.view.ChooseQuestionsView
                android:id="@+id/dialog_get_question_choose_question_choose_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/dialog_get_question_choose_question_scan_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:src="@drawable/ic_vector_drawable_scan_line" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>