<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/review_time_list_question_image_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">
                <com.michaelzhan.enlightenment.ui.view.LittleTitle
                    android:id="@+id/review_time_list_question_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Tittle"/>

                <TextView
                    android:id="@+id/review_time_list_question_proficiency_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skilled"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginStart="20dp"
                    android:textSize="19dp"/>

                <TextView
                    android:id="@+id/review_time_list_question_subject_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:textSize="19dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/title"
                android:textSize="20dp"
                android:text="题目正文"/>

            <TextView
                android:id="@+id/review_time_list_question_content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:textSize="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:text=""
                android:textColor="@color/title" />

            <TextView
                android:id="@+id/review_time_list_question_next_review_time_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="下次复习时间:"
                android:layout_marginBottom="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/review_time_list_question_see_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mainColor"
                    android:padding="5dp"
                    android:background="?android:selectableItemBackground"
                    android:textSize="15dp"
                    android:text="查看"/>
                <TextView
                    android:id="@+id/review_time_list_question_delete_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="#CF2424"
                    android:padding="5dp"
                    android:background="?android:selectableItemBackground"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="取消复习提醒"/>
            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>