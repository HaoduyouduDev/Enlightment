<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="35dp"
    android:layout_marginEnd="35dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#FFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好样的！\n你完成了今日的所有复习任务。"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:textColor="#434141"
            android:textStyle="bold"
            android:textSize="25dp"/>
        <com.github.chengang.library.TickView
            android:id="@+id/dialog_main_page_encourage_m_tick_view"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            app:check_base_color="@color/colorAccent"
            app:rate="normal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dialog_main_page_encourage_ok"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="OK"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#2196F3"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textSize="18dp"/>
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>